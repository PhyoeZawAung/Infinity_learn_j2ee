    <servlet>
    	<description>
    	</description>
    	<display-name>CourseCreateController</display-name>
    	<servlet-name>CourseCreateController</servlet-name>
    	<servlet-class>uni.project.infinitylearn.controllers.CourseCreateController</servlet-class>
